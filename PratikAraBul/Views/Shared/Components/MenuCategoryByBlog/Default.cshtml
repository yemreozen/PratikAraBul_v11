@using EntityLayer.Concrete
@model List<Blog>

<div class="tab-details clearfix">
    @if (Model != null && Model.Count > 0)
    {
        @foreach (var category in Model.Select(blog => blog.Category).Distinct())
        {
            var blogsInCategory = Model.Where(blog => blog.Category.CategoryID == category.CategoryID).ToList();
            var categoryId = category.CategoryID.ToString();

            <div id="@categoryId" class="tabcontent @(categoryId == "2" ? "active" : "")">
                <div class="row">
                    @foreach (var item in blogsInCategory)
                    {
                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="blog-box">
                                <div class="post-media">
                                    <a href="/Blog/BlogAllRead/@item.BlogID" title="">
                                        <img src="@item.Image" alt="" class="img-fluid">
                                        <div class="hovereffect">
                                        </div><!-- end hover -->
                                        <span class="menucat">@item.Category.CategoryName</span>
                                    </a>
                                </div><!-- end media -->
                                <div class="blog-meta">
                                    <h4><a href="/Blog/BlogAllRead/@item.BlogID" title="">@item.BlogTitle</a></h4>
                                </div><!-- end meta -->
                            </div><!-- end blog-box -->
                        </div>
                    }
                </div><!-- end row -->
            </div>
        }
    }
</div>
