@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="custombox clearfix">
    <h4 class="small-title">Yorumlar</h4>
    <div class="row">
        <div class="col-lg-12">
            <div class="comments-list">

                @if (Model.Count() == 0)
                {
                    <div class="media">
                        <div class="media-body">
                            <p>Bu yazıya henüz yorum yapılmamış. İlk yorumu sen yap !</p>
                        </div>
                    </div>

                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <div class="media">
                            <a class="media-left" href="#">
                                <img src="`~/tech-blog/upload/author.jpg" alt="" class="rounded-circle">
                            </a>
                            <div class="media-body">
                                <h4 class="media-heading user_name">@item.CommentUserName<small>>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</small></h4>
                                <p>@item.CommentContent</p>
                            </div>
                        </div>
                    }
                }

            </div>
        </div><!-- end col -->
    </div><!-- end row -->
</div><!-- end custom-box -->