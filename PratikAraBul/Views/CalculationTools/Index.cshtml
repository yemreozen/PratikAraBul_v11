@using EntityLayer.Concrete
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common;
@model IPagedList<EntityLayer.Concrete.CalculationText>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
<!-- Basic -->
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">

<!-- Mobile Metas -->
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<!-- Site Metas -->
<title>Tech Blog - Stylish Magazine Blog Template</title>
<meta name="keywords" content="">
<meta name="description" content="">
<meta name="author" content="">

<!-- Site Icons -->
<link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" />
<link rel="apple-touch-icon" href="images/apple-touch-icon.png">

<!-- Design fonts -->
<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

<!-- Bootstrap core CSS -->
    <link href="~/tech-blog/css/bootstrap.css" rel="stylesheet">

<!-- FontAwesome Icons core CSS -->
    <link href="~/tech-blog/css/font-awesome.min.css" rel="stylesheet">

<!-- Custom styles for this template -->
<link href="~/tech-blog/style.css" rel="stylesheet">

<!-- Responsive styles for this template -->
    <link href="~/tech-blog/css/responsive.css" rel="stylesheet">

<!-- Colors for this template -->
    <link href="~/tech-blog/css/colors.css" rel="stylesheet">

<!-- Version Tech CSS for this template -->
    <link href="~/tech-blog/css/version/tech.css" rel="stylesheet">

<!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->
</head>
<body>

    <div id="wrapper">
       <div class="page-title lb single-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <h2><i class="fa fa-calculator bg-blue"></i> Hesaplama Araçları</h2>
                    </div><!-- end col -->
                    <div class="col-lg-4 col-md-4 col-sm-12 hidden-xs-down hidden-sm-down">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Anasayfa</a></li>
                            <li class="breadcrumb-item"><a href="#">Hesaplama Araçları</a></li>
            
                        </ol>
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end container -->
        </div><!-- end page-title -->

        <section class="section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <div class="page-wrapper">
                            <div class="blog-grid-system">
                                <div class="row">
                                    @foreach(var item in Model){
                                    <div class="col-md-6">
                                        <div class="blog-box">
                                            <div class="post-media">
                                                <a href="tech-single.html" title="">
                                                    <img src="/images/lgs.jpg" alt="" class="img-fluid">
                                                    <div class="hovereffect">
                                                        <span></span>
                                                    </div><!-- end hover -->
                                                </a>
                                            </div><!-- end media -->
                                            <div class="blog-meta big-meta">
                                                <span class="color-orange"><a asp-action="index" asp-controller="calculationtools" title="">Hesaplama Araçları</a></span>
                                                    <h4><a href="/hesaplamaaraclari/@item.CalculationTextID/@Url.FriendlyUrl(item.CalculationTitle)" title="">@item.CalculationTitle</a></h4>
                                                    <p>@Html.Raw(@item.CalculationFristCaption.Substring(0,item.CalculationFristCaption.Substring(0,130).LastIndexOf(" ")))...</p>
                                            </div><!-- end meta -->
                                        </div><!-- end blog-box -->
                                    </div><!-- end col -->
                                    }
                                </div><!-- end row -->
                            </div><!-- end blog-grid-system -->
                        </div><!-- end page-wrapper -->

                        <hr class="invis3">

                        <div class="row">
                            <div class="col-md-12">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-start">
                                        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
                                        {
                                        LiElementClasses = new List<string>
                                        {
                                        "page-link","pagedlist"
                                        }
                                        })
                                    </ul>
                                </nav>
                            </div><!-- end col -->
                        </div><!-- end row -->
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end container -->
        </section>




    </div><!-- end wrapper -->
    <!-- Core JavaScript
    ================================================== -->
    <script src="~/tech-blog/js/jquery.min.js"></script>
    <script src="~/tech-blog/js/tether.min.js"></script>
    <script src="~/tech-blog/js/bootstrap.min.js"></script>
    <script src="~/tech-blog/js/custom.js"></script>

</body>
</html>