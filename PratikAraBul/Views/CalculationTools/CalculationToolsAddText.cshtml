@model EntityLayer.Concrete.CalculationText
@{
   ViewData["Title"] = "CalculationToolsAddText";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<html>
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
</head>

<body>
    <h1>Yeni Blog Ekleme</h1>

    <form class="form-group" method="post" enctype="multipart/form-data">
        <div>
            <label>Araç Başlığı</label>
            <input type="text" class="form-control" name="CalculationTitle" required />
        </div>
        <div>

            <label>Araç Başlık Alt Yazısı</label>
            <textarea type="text" id="summernote" class="form-control" name="CalculationFristCaption" required></textarea>
        </div>
        <div>

            <label>Araç İçeriği</label>
            <textarea type="text" id="summernote2" class="form-control" name="CalculationLastCaption" required></textarea>
        </div>



        <div>
            <button class="btn btn-info ">Kaydet</button>
        </div>

    </form>

    <script>
        $('#summernote').summernote({
            placeholder: 'İçeriğinizi yazınız',
            tabsize: 2,
            height: 100
        });
    </script>
    <script>
        $('#summernote2').summernote({
            placeholder: 'İçeriğinizi yazınız',
            tabsize: 2,
            height: 100
        });
    </script>
</body>
</html>
