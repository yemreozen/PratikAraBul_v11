@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "BlogListWithWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazarın blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori</th>
        <th>Açıklama</th>
        <th>Durumu</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDesc</td>
            <td>@item.CategoryStatus</td>
            @if (@item.CategoryStatus == true)
            {
                <td>
                    Aktif
                </td>
            }
            else
            {
                <td>
                    Pasif
                </td>
            }
            <td><a onclick="showConfirmationModal('@item.CategoryID')" class="btn btn-danger">Sil</a></td>
            <td><a href="/category/editcategory/@item.CategoryID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }

</table>
<!-- Silme Onay Kutusu Modalı -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bu blogu silmek istediğinize emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button id="deleteCategoryLink" type="button" class="btn btn-danger">Sil</button>
            </div>
        </div>
    </div>
</div>


<td><a asp-action="categoryadd" asp-controller="category" class="btn btn-primary">Yeni Kategori Oluştur</a></td>

<script>
    function showConfirmationModal(categoryId) {
        // Silme onay kutusunu göster
        $('#confirmDeleteModal').modal('show');

        // Silme bağlantısına dinamik olarak blog ID'sini ekleyin
        var deleteButton = document.getElementById("deleteCategoryLink");
        deleteButton.onclick = function () {
            var deleteLink = "/category/deletecategory/" + categoryId;
            window.location.href = deleteLink;
        };

        // Modal kapatma işlemini yeniden tanımla
        var modalCloseButton = document.querySelector("#confirmDeleteModal .modal-footer button[data-dismiss='modal']");
        modalCloseButton.onclick = function () {
            $('#confirmDeleteModal').modal('hide');
        };
    }
</script>